{
  "name": "cupcakes-cs",
  "version": "1.0.0",
  "description": "Cupcakes CS - E-commerce de cupcakes gourmet",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn:dev:backend\" \"yarn:dev:frontend\"",
    "dev:backend": "cd backend && yarn start:dev",
    "dev:frontend": "cd frontend && yarn dev",
    "install:all": "yarn install:backend && yarn install:frontend",
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "cd backend && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "lint": "yarn lint:backend && yarn lint:frontend",
    "lint:backend": "cd backend && yarn lint",
    "lint:frontend": "cd frontend && yarn lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

